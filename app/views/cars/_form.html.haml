= form_for(@car) do |f|
  - if @car.errors.any?
    #error_explanation
      %h2
        = pluralize(@car.errors.count, "error")
        prohibited this car from being saved:
      %ul
        - @car.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :brand
    %br/
    = f.text_field :brand
  .field
    = f.label :model
    %br/
    = f.text_field :model
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :energy
    %br/
    = f.text_field :energy
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .actions
    = f.submit
